---
import { basics } from "@/data/cv";
import GitHub from "../icons/GitHub.astro";
import Mail from "../icons/Mail.astro";
import Phone from "../icons/Phone.astro";
import WorldMap from "../icons/WorldMap.astro";

const SOCIAL_ICONS = { GitHub };
const { name, label, image, location, email, phone, profiles } = basics;
const { city, region } = location;
---

<section class="hero">
  <figure>
    <img src={image} alt={name} />
  </figure>
  <div class="info">
    <h1>{name}</h1>
    <h2>{label}</h2>
    <span><WorldMap /> {city}, {region}</span>

    <!-- Íconos normales -->
    <div class="contacts">
      {
        email && (
          <a href={`mailto:${email}`}>
            <Mail />
          </a>
        )
      }
      {
        phone && (
          <a href={`tel:${phone}`}>
            <Phone />
          </a>
        )
      }
      {
        profiles.map((p) => {
          const Icon = SOCIAL_ICONS[p.network];
          return (
            <a href={p.url} target="_blank">
              <Icon />
            </a>
          );
        })
      }
    </div>

    <!-- Datos visibles solo al imprimir -->
    <div class="print-data">
      {
        email && (
          <p>
            <strong>Email:</strong> {email}
          </p>
        )
      }
      {
        phone && (
          <p>
            <strong>Teléfono:</strong> {phone}
          </p>
        )
      }
      {
        profiles.map((p) => (
          <p>
            <strong>{p.network}:</strong> {p.url}
          </p>
        ))
      }
    </div>
  </div>
</section>

<style>
  .hero {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    padding: 4rem 2rem;
    gap: 2rem;
    flex-wrap: wrap;
    text-align: center;
  }

  figure {
    flex-shrink: 0;
  }

  figure img {
    width: 200px;
    height: 200px;
    border-radius: 50%;
    border: 4px solid #a97142;
    object-fit: cover;
    box-shadow: 0 8px 24px #a97142;
    transition: 0.3s;
  }

  figure img:hover {
    transform: scale(1.05);
    box-shadow: 0 12px 32px #a97142;
  }

  .info {
    flex: 1;
    max-width: 600px;
    color: #f0f0f0;
    text-align: left;
    line-height: 1.6;
  }

  .info h1 {
    font-size: 2.8rem;
    font-weight: 800;
    color: #a97142;
    text-shadow: 2px 2px 8px rgba(169, 113, 66, 0.6);
  }

  .info h2 {
    font-size: 1.2rem;
    color: #f0f0f0;
    font-weight: 500;
    margin-top: 0.5rem;
    text-shadow: 1px 1px 6px rgba(0, 0, 0, 0.4);
  }

  .info span {
    color: #ccc;
    display: flex;
    align-items: center;
    gap: 0.25rem;
    margin-top: 0.25rem;
    font-size: 0.95rem;
  }

  .contacts {
    display: flex;
    justify-content: left;
    gap: 10px;
    margin-top: 1rem;
    flex-wrap: wrap;
  }

  .contacts a {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
    border-radius: 6px;
    color: #a97142;
    border: 1px solid #a97142;
    transition: all 0.3s ease;
  }

  .contacts a:hover {
    transform: scale(1.2);
    filter: drop-shadow(0 0 6px #a97142);
  }

  .print-data {
    display: none;
    margin-top: 1rem;
    font-size: 0.95rem;
    color: #000;
  }

  /* --- TABLETS --- */
  @media (max-width: 1024px) {
    .hero {
      padding: 3rem 1.5rem;
      flex-direction: column;
      text-align: center;
    }
    .info {
      text-align: center;
    }
    .info span {
      justify-content: center;
    }
    .contacts {
      justify-content: center;
    }
  }

  /* --- MOBILE --- */
  @media (max-width: 600px) {
    .info h1 {
      font-size: 2rem;
    }
    .info h2 {
      font-size: 1rem;
    }
    figure img {
      width: 120px;
      height: 120px;
    }
  }

  /* --- PRINT MODE --- */
  @media print {
    body {
      background: #fff !important;
      color: #000 !important;
      -webkit-print-color-adjust: exact;
      print-color-adjust: exact;
    }

    figure img {
      border: 2px solid #000;
      box-shadow: none;
    }

    .contacts {
      display: none !important;
    }

    .print-data {
      display: block !important;
    }

    .info h1,
    .info h2,
    .info span {
      color: #000 !important;
      text-shadow: none !important;
    }
  }
</style>
