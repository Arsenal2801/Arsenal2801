---
import Section from "../Section.astro";
import { projects } from "@/data/cv";
---

<Section title="Proyectos">
  <div class="cards-container">
    {
      projects.map((p) => (
        <div class="card">
          <h3>
            <a href={p.url} target="_blank">
              {p.name}
            </a>
          </h3>
          <p>{p.description}</p>
          {p.highlights && (
            <ul>
              {p.highlights.map((h) => (
                <li>â€¢ {h}</li>
              ))}
            </ul>
          )}
        </div>
      ))
    }
  </div>
</Section>

<style>
  .cards-container {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 1.8rem;
    margin-top: 1rem;
  }

  .card {
    background: #1b263b; /* consistente con Skills */
    color: #e0e0e0;
    border: 1px solid #2e3a59;
    padding: 1.8rem;
    border-radius: 14px;
    transition: all 0.3s ease;
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.25);
  }

  .card:hover {
    background: #2e4053;
    transform: translateY(-6px);
    box-shadow: 0 8px 18px rgba(0, 0, 0, 0.35);
    border-color: #4a5d85;
  }

  .card h3 {
    color: #b87333;
    font-size: 1.2rem;
    margin-bottom: 0.6rem;
    text-shadow: 0 1px 4px rgba(184, 115, 51, 0.3);
  }

  .card h3 a {
    text-decoration: none;
    color: inherit;
  }

  .card p {
    color: #ccc;
    font-size: 0.95rem;
    line-height: 1.5;
    margin-bottom: 0.75rem;
  }

  .card ul {
    margin-left: 1rem;
    color: #ccc;
    font-size: 0.9rem;
    line-height: 1.4;
  }

  .card ul li {
    margin-bottom: 0.25rem;
  }
</style>
