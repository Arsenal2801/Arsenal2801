---
import Section from "../Section.astro";
import { work } from "@/data/cv";

function formatDate(date) {
  if (!date) return "Actual";
  return new Date(date).toLocaleDateString("es-MX", {
    year: "numeric",
    month: "short",
  });
}
---

<Section title="Experiencia Laboral">
  <ul>
    {
      work.map((w) => {
        const years = `${formatDate(w.startDate)} - ${formatDate(w.endDate)}`;
        return (
          <li>
            <article>
              <header>
                <div>
                  <h3>
                    <a href={w.url} target="_blank">
                      {w.name}
                    </a>
                  </h3>
                  <h4>{w.position}</h4>
                </div>
                <time>{years}</time>
              </header>
              <p>{w.summary}</p>
            </article>
          </li>
        );
      })
    }
  </ul>
</Section>

<style>
  ul {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }
  h3 {
    font-weight: 600;
    color: #b87333;
    font-size: 1.1rem;
  }
  h3 a {
    text-decoration: none;
    color: inherit;
  }
  h4 {
    font-weight: 400;
    color: #ccc;
    font-size: 0.95rem;
  }
  header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
  }
  time {
    font-size: 0.85rem;
    color: #999;
  }
  p {
    color: #ccc;
    line-height: 1.6;
    font-size: 0.95rem;
  }
</style>
