---
import Section from "../Section.astro";
import { education } from "@/data/cv";

function formatDate(date) {
  if (!date) return "Actual";
  return new Date(date).toLocaleDateString("es-MX", {
    year: "numeric",
    month: "short",
  });
}
---

<Section title="EducaciÃ³n">
  <ul>
    {
      education.map((e) => {
        const years = `${formatDate(e.startDate)} - ${formatDate(e.endDate)}`;
        return (
          <li>
            <article>
              <header>
                <div>
                  <h3>
                    <a href={e.url} target="_blank">
                      {e.institution}
                    </a>
                  </h3>
                  <h4>
                    {e.studyType} - {e.area}
                  </h4>
                </div>
                <time>{years}</time>
              </header>
            </article>
          </li>
        );
      })
    }
  </ul>
</Section>

<style>
  ul {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }
  h3 {
    font-weight: 600;
    color: #b87333;
    font-size: 1.1rem;
  }
  h3 a {
    color: inherit;
    text-decoration: none;
  }
  h4 {
    font-weight: 400;
    color: #ccc;
    font-size: 0.95rem;
  }
  header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
  }
  time {
    font-size: 0.85rem;
    color: #999;
  }
  ul li {
    margin-left: 1rem;
  }
  .score {
    font-size: 0.9rem;
    font-weight: 500;
    color: #ccc;
    margin-top: 0.25rem;
  }
</style>
